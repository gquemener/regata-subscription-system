{% extends 'base.html.twig' %}

{% block title %}Race{% endblock %}

{% block body %}
    <h1>Race</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ race.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ race.date ? race.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="#" hx-get="{{ path('app_race_index') }}" hx-target="body" hx-push-url="true">back to list</a>
    <a href="#" hx-get="{{ path('app_race_edit', {'id': race.id}) }}" hx-target="body" hx-push-url="true">edit</a>

    {{ include('race/_delete_form.html.twig') }}
{% endblock %}
